<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewProfileActivity"
        android:background="#FFF0CC">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageProfile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:elevation="40dp"
                    app:civ_border_color="#FFFF"
                    app:civ_border_width="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="FirstName LastName"
                    android:gravity="center"
                    android:elevation="20dp"
                    android:textColor="#A25253"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageProfile"
                    tools:ignore="HardcodedText" />

                <GridLayout
                    android:id="@+id/gl_basicInfo"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:elevation="5dp"
                    android:background="@drawable/beach_box"
                    android:columnCount="1"
                    android:rowCount="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nameTitle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="5dp"
                        android:paddingBottom="8dp"
                        android:text="Basic Information"
                        android:textAlignment="center"
                        android:textColor="#A25253"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <GridLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@drawable/beach_box"
                        android:columnCount="2"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:rowCount="40"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/fullName"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Lorem Ipsum"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact No. :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:autoLink="all"
                            android:text="Male"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Designation :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/desig"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:autoLink="all"
                            android:text="9999955555"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:autoLink="all"
                            android:text="1234567890"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Joining :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/doj"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:autoLink="all"
                            android:text="username@email.com"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qualification :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/qual"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Lorem Ipsum lives in a city full of weird monsters somewhere near mondstadt in Genshin Impact."
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Group  :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="29th April, 2000"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="O +ve"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salary :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/salary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="1122 3344 5566"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Non-Tech\nSkill Set :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/ntss"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Lorem Ipsum's Mother"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pref. Field of\nExpertise :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/pfoe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Open"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attendance :"
                            android:textColor="#A25253"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/att"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Open"
                            android:textColor="#000"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />



                        <!--            <GridLayout-->
                        <!--                android:layout_width="wrap_content"-->
                        <!--                android:layout_height="wrap_content"-->
                        <!--                android:layout_gravity="center"-->
                        <!--                android:columnCount="2"-->
                        <!--                android:rowCount="1">-->

                        <!--            </GridLayout>-->


                    </GridLayout>
                </GridLayout>



                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gl_basicInfo">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_margin="10dp" />
                </GridLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>