<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="15dp"
    app:cardBackgroundColor="#FFF4DA"
    android:layout_marginHorizontal="3dp"
    app:cardUseCompatPadding="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:rowCount="1"
        android:columnCount="2"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/singleImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:padding="5dp"
            android:layout_gravity="center"
            android:elevation="5dp"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="5dp" />

        <GridLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_gravity="start"
            android:rowCount="5"
            android:columnCount="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchname"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#A25253"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchdetail"
                android:text="Class and Dept."
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/searchcontact1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="Contact No 1"
                android:textSize="14dp"
                android:autoLink="none"
                android:layout_marginTop="7dp"
                android:textIsSelectable="true"
                android:textColor="#FFF4DA"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/searchemail1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="Contact No 1"
                android:textSize="14dp"
                android:autoLink="none"
                android:layout_marginTop="7dp"
                android:textIsSelectable="true"
                android:textColor="#FFF4DA"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/searchemailid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Email Id"
                android:textSize="14dp"
                android:autoLink="none"
                android:textIsSelectable="true"
                android:textColor="#FFF4DA"
                tools:ignore="HardcodedText" />



            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:columnCount="3"
                android:rowCount="1">
                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_marginRight="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call"/>
                <ImageView
                    android:id="@+id/iv_whatsapp"
                    android:layout_marginRight="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_whatsapp"/>
                <ImageView
                    android:id="@+id/iv_mail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_gmail"/>

            </GridLayout>

        </GridLayout>




    </GridLayout>

</androidx.cardview.widget.CardView>